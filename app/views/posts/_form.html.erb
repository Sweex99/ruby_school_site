<%= form_for @post do |f| %>
  <div>
  <% if @post.logo.present? %>
    <%= image_tag(current_user.avatar.url, size: '300x200') %>
  <% end %>
  <%= f.file_field :logo %>
  </div><br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, :class => 'ckeditor' %>
  </div>
  <div>
    <%= f.label :who %>
    <%= f.text_field :who , :value => @user_name, class: 'form-control' %>
  </div><br>
  <div class="row justify-content-center">
    <%= f.submit "Зберегти", class: 'btn btn-success '%>
  </div>
<% end %>